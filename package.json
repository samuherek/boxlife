{
  "name": "electra",
  "description": "personal book writing and publishing app",
  "repository": "https://github.com/samuherek/electra",
  "author": {
    "name": "Sam Uherek",
    "email": "samuherek@pm.me",
    "url": "samuherek.com"
  },
  "private": true,
  "scripts": {
    "format": "npm run prettier -- --write",
    "prettier": "prettier \"**/*.+(js|jsx|ts|tsx|json|yml|yaml|md|mdx|graphql)\"",
    "prettier:validate": "npm run prettier -- --list-different",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx|json|yml|yaml|md|mdx|graphql)": [
      "yarn format",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "1.3.1",
    "lint-staged": "8.1.0",
    "prettier": "1.16.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "@bit/samuherek.ui.components.button": "file:./packages/ui/src/components/button",
    "@bit/samuherek.ui.styles.global": "file:./packages/ui/src/styles/global",
    "@bit/samuherek.ui.styles.theme": "file:./packages/ui/src/styles/theme",
    "@bit/samuherek.ui.styles.styled-components": "file:./packages/ui/src/styles/styled-components",
    "@bit/samuherek.ui.components.button-base": "file:./packages/ui/src/components/button-base"
  }
}
